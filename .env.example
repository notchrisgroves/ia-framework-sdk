# API Configuration - OpenRouter (Recommended)
# Single unified API for 200+ models (Claude, Grok, Perplexity, etc.)
# Get key at: https://openrouter.ai/keys
OPENROUTER_API_KEY=sk-or-REPLACE_WITH_YOUR_OPENROUTER_KEY

# API Configuration - Anthropic (Optional fallback)
ANTHROPIC_API_KEY=sk-ant-REPLACE_WITH_YOUR_API_KEY

# Server Configuration
PORT=3000
NODE_ENV=development

# HackerOne Integration (Optional)
HACKERONE_API_KEY=REPLACE_WITH_YOUR_HACKERONE_KEY
HACKERONE_USERNAME=your_hackerone_username

# Ghost CMS Integration (Optional)
GHOST_API_KEY=REPLACE_WITH_YOUR_GHOST_KEY
GHOST_ADMIN_URL=https://yourblog.com

# OSINT Resources (Optional)
OSINT_TOOLS_PATH=/app/resources/research

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Resource Configuration
RESOURCES_PATH=/app/resources
RESOURCES_SECURITY=/app/resources/security
RESOURCES_WRITER=/app/resources/writer
RESOURCES_RESEARCH=/app/resources/research
